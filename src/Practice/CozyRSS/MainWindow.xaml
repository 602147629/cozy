<Window x:Class="CozyRSS.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CozyRSS"
        mc:Ignorable="d"
        Title="MainWindow" Height="720" Width="1028">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="70" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Rectangle Fill="Gray" Grid.Row="0" Grid.ColumnSpan="2" />
        <Rectangle Fill="PaleGreen" Grid.Row="1" Grid.Column="0" />
        <Grid Grid.Row="1" Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="70" />
                <RowDefinition />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200" />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Rectangle Fill="Black" Grid.Row="0" Grid.ColumnSpan="2" />
            <Rectangle Fill="Green" Grid.Row="1" Grid.Column="0" />
            <Rectangle Fill="Red" Grid.Row="1" Grid.Column="1" />
        </Grid>
    </Grid>
</Window>
