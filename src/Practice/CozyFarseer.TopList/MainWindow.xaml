<Window x:Class="CozyFarseer.TopList.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CozyFarseer.TopList"
        xmlns:c="clr-namespace:CozyFarseer.TopList.Controls"
        mc:Ignorable="d"
        Title="MainWindow" Height="800" Width="500"
        DataContext="{Binding Main, Source={StaticResource Locator}}" WindowStartupLocation="CenterScreen">
    <Grid>
        <ListView ItemsSource="{Binding FarseerNodeList}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <c:FarseerNodeItem Nick="{Binding nick}" Avatar="{Binding avatar}" Accuracy="{Binding accuracy}" 
                                   TextContent="{Binding content}" Time="{Binding time}" TType="{Binding ttype}" 
                                   TStatus="{Binding tstatus}"></c:FarseerNodeItem>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</Window>
